<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="16dp">    <TextView        android:id="@+id/title_view"        android:layout_width="0dp"        android:layout_height="wrap_content"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:text="@string/preference_editor_title"        android:textStyle="bold"        android:textSize="18sp"        android:textColor="@color/black"        />    <TextView        android:id="@+id/preference_type_label"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="24dp"        app:layout_constraintTop_toBottomOf="@+id/title_view"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:text="@string/preference_type"        />    <androidx.appcompat.widget.AppCompatSpinner        android:id="@+id/preference_type_spinner"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="8dp"        app:layout_constraintTop_toBottomOf="@+id/preference_type_label"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        />    <EditText        android:id="@+id/preference_key_et"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:hint="@string/preference_editor_key_hint"        app:layout_constraintTop_toBottomOf="@+id/preference_type_spinner"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        />    <EditText        android:id="@+id/preference_value_et"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="24dp"        android:hint="@string/preference_editor_value_hint"        app:layout_constraintTop_toBottomOf="@+id/preference_key_et"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        />    <androidx.appcompat.widget.SwitchCompat        android:id="@+id/preference_value_boolean_et"        android:visibility="gone"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="24dp"        android:hint="@string/preference_editor_value_hint"        android:textSize="18sp"        app:layout_constraintTop_toBottomOf="@+id/preference_key_et"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        />    <androidx.constraintlayout.widget.Barrier        android:id="@+id/value_barrier"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:barrierDirection="bottom"        app:constraint_referenced_ids="preference_value_et,preference_value_boolean_et"        />    <Button        android:id="@+id/save_btn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="24dp"        app:layout_constraintTop_toBottomOf="@+id/value_barrier"        app:layout_constraintEnd_toEndOf="parent"        android:text="@android:string/ok"        /></androidx.constraintlayout.widget.ConstraintLayout>